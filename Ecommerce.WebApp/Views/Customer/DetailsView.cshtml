@model CustomerInfoDetails

<h1>Customer Details</h1>

<h2>Welcome To BdJobs, @Model.Name</h2>

<table>
    <tr>
        <th>Serial No:</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name:</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Phone:</th>
        <td>@Model.Phone</td>
    </tr>
    <tr>
        <th>Email:</th>
        <td>@Model.Email</td>
    </tr>
</table>

