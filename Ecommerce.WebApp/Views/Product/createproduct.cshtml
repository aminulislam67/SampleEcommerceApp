@model ProductCreate


<h4>Product Create</h4>


<form method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input type="text" class="form-control" asp-for="Description" placeholder="Description">
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label class="form-check-label" for="Price">Price</label>
        <input type="Price" class="form-control" asp-for="Price" id="customer-Price" placeholder="Price">
        <span asp-validation-for="Price"></span>

    </div>

    <div class="form-group">
        <label class="form-check-label" for="Category">Category</label>
        <input type="Category" class="form-control" asp-for="Category" id="Category" placeholder="Category">
        <span asp-validation-for="Category"></span>

    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
